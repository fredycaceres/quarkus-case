{
  "info": {
    "name": "Exchange Rate API",
    "description": "Collection for the Exchange Rate API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Exchange Rate",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/exchange-rate?dni={{dni}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "exchange-rate"
          ],
          "query": [
            {
              "key": "dni",
              "value": "{{dni}}",
              "description": "The client's DNI (required)"
            }
          ]
        },
        "description": "Get the current exchange rate. Requires a valid DNI parameter. There is a daily limit of 10 queries per DNI."
      },
      "response": [
        {
          "name": "Successful Response",
          "originalRequest": {
            "method": "GET",
            "header": [],
